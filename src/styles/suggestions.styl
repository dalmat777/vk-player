.suggestions
    centered()
    background #000
    transition visibility .4s, opacity .4s

    &.-hidden
        visibility hidden
        opacity 0

    &__list
        overflow hidden
        centered()
        top 40px
        bottom 45px
        max-width 1280px
        max-height 720px

    &__item
        float left
        position relative
        box-sizing border-box
        width 25%
        max-width 320px
        height 33.333%
        max-height 240px
        border 1px solid #222
        background no-repeat center
        background-size cover

        &:hover
            text-decoration none

        .-columns-1 > &
            width 100%

        .-columns-2 > &
            width 50%

        .-columns-3 > &
            width 33.333%

        .-columns-4 > &
            width 25%

        .-columns-5 > &
            width 20%

        .-columns-6 > &
            width 16.666%

        .-columns-7 > &
            width 14.28%

        .-columns-8 > &
            width 12.5%

        .-columns-9 > &
            width 11.111%

        .-columns-10 > &
            width 10%

        .-columns-11 > &
            width 9.091%

        .-columns-12 > &
            width 8.333%

        .-rows-1 > &
            height 100%

        .-rows-2 > &
            height 50%

        .-rows-3 > &
            height 33.333%

        .-rows-4 > &
            height 25%

        .-rows-5 > &
            height 20%

        .-rows-6 > &
            height 16.666%

        .-rows-7 > &
            height 14.285%

        .-rows-8 > &
            height 12.5%

        .-rows-9 > &
            height 11.111%

        .-rows-10 > &
            height 10%

        .-rows-11 > &
            height 9.091%

        .-rows-12 > &
            height 8.333%

    &__item-data
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        padding 10px
        background rgba(0, 0, 0, .7)
        opacity 0
        transition opacity .2s

    &__item:hover &__item-data
        opacity 1

    &__item-title
        margin-bottom 5px
        font-size 1.1em

    &__item-author
        ellipsis()
        font-size .9em
        color #bbb

    &__item-duration
        position absolute
        right 10px
        bottom 10px
        font-size .9em
        color #ccc
